<resources>
    <declare-styleable name="ProgressCircleView">
        <attr name="percent" format="integer" />
        <attr name="borderColor" format="color" />
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="animated" format="boolean" />
        <attr name="shape" format="enum">
            <enum name="fullCircle" value="0" />
            <enum name="ring" value="1" />
            <enum name="halfRing" value="2" />
        </attr>
    </declare-styleable>

    <style name="DefaultProgressCircleView">
        <item name="percent">0</item>
        <item name="borderColor">@color/colorBlack</item>
        <item name="startColor">@color/colorGreen</item>
        <item name="endColor">@color/colorRed</item>
        <item name="textColor">@color/colorBlack</item>
        <item name="animated">true</item>
        <item name="shape">halfRing</item>
    </style>
</resources>